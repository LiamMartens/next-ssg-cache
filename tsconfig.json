{
  "compilerOptions": {
    "module": "ES2020",
    "target": "es5",
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "declaration": true,
    "lib": ["esnext", "dom"],
    "outDir": "./lib/esm",
    "declarationDir": "./types"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}